<Application x:Class="CatalogDesktopApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CatalogDesktopApp"
             xmlns:vm="clr-namespace:CatalogDesktopApp.ViewModels"
             xmlns:view="clr-namespace:CatalogDesktopApp.Views"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:LoginWindowViewModel}">
            <view:LoginWindow/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ElevWindowViewModel}">
            <view:ElevWindow/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ClasaWindowViewModel}">
            <view:ClasaWindow/>
        </DataTemplate>
    </Application.Resources>
</Application>
