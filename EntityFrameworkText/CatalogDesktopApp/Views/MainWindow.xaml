<Window x:Class="CatalogDesktopApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatalogDesktopApp"
        xmlns:VM="clr-namespace:CatalogDesktopApp.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <VM:MainWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="162,84,0,0" VerticalAlignment="Top" Width="75" Command="{Binding MyClickCommand}" />
        <Button Content="Button" HorizontalAlignment="Left" Margin="280,84,0,0" VerticalAlignment="Top" Width="75" Command="{Binding My2ClickCommand}" />
        <Label Content="{Binding MyLabel}" HorizontalAlignment="Left" Margin="162,160,0,0" VerticalAlignment="Top" Width="176"/>

    </Grid>
</Window>
