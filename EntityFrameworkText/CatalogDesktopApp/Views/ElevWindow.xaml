<Window x:Class="CatalogDesktopApp.Views.ElevWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CatalogDesktopApp.Views"
        xmlns:VM="clr-namespace:CatalogDesktopApp.ViewModels"
        mc:Ignorable="d"
        Title="ElevWindow" Height="450" Width="800">
    <Window.DataContext>
        <VM:ElevWindowViewModel />
    </Window.DataContext>
    <Grid>
        <Label Content="Nume si Prenume Elev" Height="44" Margin="272,57,274,0" VerticalAlignment="Top" Width="247" FontWeight="Bold" FontSize="22" HorizontalAlignment="Center"/>
        <Grid Margin="123,129,274,110" ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Label Content="Clasa:" Grid.Column="0" Grid.Row="0" FontSize="15"/>
            <Label Content="Numar Matricol:" Grid.Column="0" Grid.Row="1" FontSize="15"/>
            <Label Content="Data Nasterii:" Grid.Column="0" Grid.Row="2" FontSize="15"/>
            <Label Content="Telefon:" Grid.Column="0" Grid.Row="3" FontSize="15"/>
            <Label Content="Email:" Grid.Column="0" Grid.Row="4" FontSize="15"/>

        </Grid>
        <Grid HorizontalAlignment="Left" Height="180" Margin="602,129,0,0" VerticalAlignment="Top" Width="138">

            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Content="Note" Command="{Binding NoteCommand}"></Button>
            <Button Grid.Row="1" Content="Absente" Command="{Binding AbsenteCommand}"></Button>
            <Button Grid.Row="2" Content="Observatii" Command="{Binding ObservatiiCommand}"></Button>

        </Grid>

    </Grid>
</Window>
